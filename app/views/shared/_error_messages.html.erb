<% if @user.errors.any?() %>
	<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "erreur") %> 
		ont empêché cet <%= object.class.to_s.underscore.humanize.downcase %>
		 de s'inscrire:</h2>
		<p>Merci de corriger ces champs :</p>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

